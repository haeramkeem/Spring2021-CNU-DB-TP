mixin blankRow
    tr <td></td><td></td><td></td><td></td><td></td><td></td>

mixin printBook(book)
    tr
        td= book[0]
        td= book[1]
        td= book[2]
        td= book[3]
        td= book[4]
        td 
            form(action="/cancel" method="POST" class="one-button")
                input(type="hidden" name="isbn" value=book[0])
                input.small-button(type="submit" value="예약취소")

each book in booksToShow
    +printBook(book)
- for(let i = 0; i < 14 - booksToShow.length; i++)
    +blankRow